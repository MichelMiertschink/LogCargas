@model IEnumerable<SerranaLogCargas.Models.LoadScheduling>

@{
    ViewData["Title"] = "Carregamentos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnloadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weigth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlTranspor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlContract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vladvance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cte)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinyId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnloadDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weigth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlTranspor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlContract)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vladvance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cte)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
