@model IEnumerable<LogCargas.Models.LoadScheduling>

@{
    ViewData["Title"] = "Carregamentos - Busca por Cidade Origem";
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</p>

<nav class="navbar navbar-expand-sm bg-dark" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Filtro</a>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <form asp-action="CityOriginSearch">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <input type="text" class="form-control form-control-sm" name="cityOrigin" />
                    </li>
@*                     <li>
                        <select asp-for="LoadScheduling.CityOriginId" asp-items="@(new SelectList(Model.City, "Id", "Name"))" class="form-control">
                            <option disabled selected>Selecionar...</option>
                        </select>
                    </li> *@
                    <li>
                        <button class="btn btn-secondary btn-sm" type="submit">Filtrar</button>
                    </li>
                </ul>
            </form>
        </div>
        <div class="d-flex">
            <h5 class="d-flex text-success">Valor total de contratos: @Model.Sum(obj => obj.VlContract).ToString("n2")</h5>
        </div>
    </div>
</nav>
<table class="table table-striped table-hover table-bordered table-sm shadow">
    <thead>
        <tr class="table-active table-primary">
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityOrigin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityDestiny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnloadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weigth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlTranspor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlContract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vladvance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cte)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CorporateReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityOrigin.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityDestiny.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnloadDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weigth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VlTranspor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VlContract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vladvance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cte)
                </td>
            </tr>
        }
    </tbody>
</table>