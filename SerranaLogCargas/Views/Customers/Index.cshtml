@model IEnumerable<LogCargas.Models.Customer>

@{
    ViewData["Title"] = "Clientes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
</p>
<div class="d-flex">
    <form method="post" asp-action="ImportCustomers" enctype="multipart/form-data">
        <div class="input-group">
            <input class="form-control" type="file" name="formFile">
            <button class="btn btn-secondary" type="submit">Importar Clientes</button>
        </div>
    </form>
</div>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorporateReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostCenter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorporateReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCenter)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="badge bg-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="badge bg-secondary">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="badge bg-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
