@model IEnumerable<SerranaLogCargas.Models.State>

@{
    ViewData["Title"] = "Estados";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Acronym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Acronym)
                </td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-rout-id="@item.Id" class="badge bg-info">Detalhes</a>
                    <a asp-action="Edit" asp-rout-id="@item.Id" class="badge bg-warning">Editar</a>
                    <a asp-action="Delete" asp-rout-id="@item.Id" class="badge bg-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>