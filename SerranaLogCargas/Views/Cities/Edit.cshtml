@model LogCargas.Models.ViewModels.CityFormViewModel

@{
    ViewData["Title"] = "Cidade";
}

<h1>Editar</h1>
<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="City.Id"/>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="City.Name" class="control-label"></label>
                <input asp-for="City.Name" class="form-control" />
                <span asp-validation-for="City.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City.StateId" class="control-label"></label>
                <select asp-for="City.StateId" asp-items="@(new SelectList(Model.States, "Id", "Name"))" class="form-control"></select>
                <a asp-controller="States" asp-action="Create" class="badge bg-primary">Novo Estado</a>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-outline-primary">Retornar</a>
            </div>
        </form>
    </div>
</div>
