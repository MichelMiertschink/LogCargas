@model IEnumerable<LogCargas.Models.LoadScheduling>

@{
    ViewData["Title"] = "Busca por Dt. Inclusão - Carregamentos";
    DateTime minDate = DateTime.Parse(ViewData["minDate"] as String);
    DateTime maxDate = DateTime.Parse(ViewData["maxDate"] as String);
}

<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
    <h4>@ViewData["minDate"] - @ViewData["maxDate"]</h4>
</p>

<nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Filtro</a>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <form asp-action="SimpleSearch">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        
                       <input ty class="form-control" name="minDate" value=@ViewData["minDate"] />
                    </li>
                    <li class="nav-item">
                        <input type="data" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                    </li>
                    <li>
                        <button class="btn btn-secondary" type="submit">Filtrar</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</nav>

<table class="table table-striped table-hover table-bordered shadow">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.IncludeDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityOrigin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityDestiny)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnloadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weigth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlTranspor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlContract)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vladvance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContractId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cte)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IncludeDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CorporateReason)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityOrigin.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityDestiny.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnloadDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weigth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VlTranspor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VlContract)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vladvance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContractId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cte)
                </td>
            </tr>
        }
    </tbody>
</table>
