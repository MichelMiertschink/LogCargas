@model SerranaLogCargas.Models.ViewModels.DriverFormViewModel

@{
    ViewData["Title"] = "Motorista";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Driver.Name" class="control-label"></label>
                <input asp-for="Driver.Name" class="form-control" />
                <span asp-validation-for="Driver.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.CPF" class="control-label"></label>
                <input asp-for="Driver.CPF" class="form-control" placeholder="Apenas números" />
                <span asp-validation-for="Driver.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.CelPhone" class="control-label"></label>
                <input asp-for="Driver.CelPhone" class="form-control" placeholder="Apenas números" />
                <span asp-validation-for="Driver.CelPhone" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn">Retornar</a>
            </div>
        </form>
    </div>
</div>